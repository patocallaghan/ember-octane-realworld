<form {{on "submit" this.submit}}>
  {{#if @errors}}
    <ul class="error-messages">
      {{#each @errors key="@index" as | error |}}
        <li data-test-article-form-error-item>{{error.attribute}} {{error.message}}</li>
      {{/each}}
    </ul>
  {{/if}}
  <fieldset class="form-group">
    <Input @value={{this.title}} class="form-control form-control-lg" @type="text" placeholder="Post Title"
      data-test-article-form-input-title @input={{fn this.change "title"}} />
  </fieldset>
  <fieldset class="form-group">
    <Input @value={{this.description}} class="form-control" @type="text" placeholder="What's this article about?"
      data-test-article-form-input-description @input={{fn this.change "description"}} />
  </fieldset>
  {{! template-lint-disable block-indentation }}
  <fieldset class="form-group">
    <Textarea @value={{this.body}} class="form-control" @rows="8" placeholder="Write your post (in markdown)"
      data-test-article-form-input-body @input={{fn this.change "body"}} />
    </fieldset>
  <fieldset class="form-group">
    <Input @value={{this.newTags}} class="form-control" @type="text" placeholder="Enter tags" data-test-article-form-input-tags {{on "keydown" this.addTags}} />
    <div class="tag-list">
      {{#each this.tags as |tag index|}}
        <span class="tag-default tag-pill">
          {{! template-lint-disable no-invalid-interactive}}
          <i class="ion-close-round" data-test-article-form-tag-remove-button {{on "click" (fn this.removeTag index)}}></i>
          {{tag}}
        </span>
      {{/each}}
    </div>
  </fieldset>
  <button class="btn btn-lg btn-primary pull-xs-right" disabled={{@disableSubmit}} type="submit"
    data-test-article-form-submit-button>
    {{if @isNew "Create" "Publish"}} Post
  </button>
</form>