<p>Popular Tags</p>
{{#if this.loadTags.isRunning}}
  <p>Loading...</p>
{{else}}
  <div class="tag-list">
    {{#each this.tags as |tag| }}
      <LinkTo @route="home" @query={{hash feed=null tag=tag.id page=1}} class="tag-pill tag-default"
        data-test-tag={{tag.id}}>
        {{tag.id}}
      </LinkTo>
    {{/each}}
  </div>
{{/if}}