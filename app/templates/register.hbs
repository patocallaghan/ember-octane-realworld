<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign Up</h1>
        <p class="text-xs-center">
          <LinkTo @route="login">
            Have an account?
          </LinkTo>
        </p>
        {{#if (not this.user.isValid)}}
          <ul class="error-messages">
            {{#each this.user.errors as |error|}}
              <li>{{error.attribute}} {{error.message}}</li>
            {{/each}}
          </ul>
        {{/if}}
        <form {{action (perform this.register) on="submit"}}>
          <fieldset class="form-group">
            <Input class="form-control form-control-lg" placeholder="Username" @value={{this.username}} />
          </fieldset>
          <fieldset class="form-group">
            <Input class="form-control form-control-lg" @type="email" placeholder="Email" @value={{this.email}} />
          </fieldset>
          <fieldset class="form-group">
            <Input class="form-control form-control-lg" @type="password" placeholder="Password"
              @value={{this.password}} />
          </fieldset>
          <button class="btn btn-lg btn-primary pull-xs-right" disabled={{this.register.isRunning}}>
            Sign Up
          </button>
        </form>
      </div>
    </div>
  </div>
</div>