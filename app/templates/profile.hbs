<div class="profile-page">
  <div class="user-info">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-10 offset-md-1">
          <img src={{@model.image}} class="user-img" alt="user image">
          <h4>{{@model.username}}</h4>
          <p>
            {{@model.bio}}
          </p>
          {{#if this.session.isLoggedIn}}
            {{#if (eq @model.username this.session.user.username)}}
              <LinkTo @route="settings" class="btn btn-sm btn-outline-secondary action-btn"
                data-test-edit-profile-button>
                <i class="ion-gear-a"></i> Edit Profile Settings
              </LinkTo>
            {{else}}
              <FollowUserButton @onClick={{perform (if @model.following this.unFollowUser this.followUser) @model}}
                data-test-follow-profile-button disabled={{this.waitingForFollowing}}
                class="btn-outline-secondary action-btn">
                {{if @model.following "Unfollow" "Follow"}} {{@model.username}}
              </FollowUserButton>
            {{/if}}
          {{else}}
            <LinkTo @route="login" class="btn btn-sm btn-outline-secondary action-btn" data-test-follow-profile-button>
              <i class="ion-plus-round"></i> &nbsp; {{if @model.following "Unfollow" "Follow"}} {{@model.username}}
            </LinkTo>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-10 offset-md-1">
        <div class="articles-toggle">
          <ul class="nav nav-pills outline-active">
            <li class="nav-item">
              <LinkTo @route="profile.index" class="nav-link" data-test-profile-nav-link="my-articles">
                My Articles
              </LinkTo>
            </li>
            <li class="nav-item">
              <LinkTo @route="profile.favorites" class="nav-link" data-test-profile-nav-link="favorite-articles">
                Favorited Articles
              </LinkTo>
            </li>
          </ul>
        </div>
        {{outlet}}
      </div>
    </div>
  </div>
</div>